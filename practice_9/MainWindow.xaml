<Window x:Class="practice_9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practice_9"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="SplitTxt" Content="Разделить на слова" HorizontalAlignment="Left" Margin="102,54,0,0" VerticalAlignment="Top" Height="25" Width="202" Click="SplitTxt_Click"/>
        <Button x:Name="ReverseButton" Content="Перестановка слов" HorizontalAlignment="Left" Margin="102,84,0,0" VerticalAlignment="Top" Height="25" Width="202" Click="ReverseButton_Click"/>
        <TextBox x:Name="InputText" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="385" Height="39"/>
        <ListBox x:Name="SplitMsg" Margin="400,10,10,217" Grid.ColumnSpan="2"/>
        <Label x:Name="ReverseMsg" Content="Label" HorizontalAlignment="Left" Margin="400,222,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="202" Width="390"/>

    </Grid>
</Window>
